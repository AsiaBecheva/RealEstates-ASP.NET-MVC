@model IEnumerable<RealEstates.Data.Models.Property>

<div class="row">
    <div class="col-md-12">
        <table class="table table-striped" style="background-color:white; border: inset">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>User</th>
                    <th>Title</th>
                    <th>Created on</th>
                    <th></th>
                    <th></th>
                    <th></th>
                </tr>
            </thead>

            @foreach (var item in Model)
            {
                <tr>
                    <th scope="row">@item.Id</th>
                    <td style="word-break:break-word">@item.Author.Email</td>
                    <td style="word-break:break-word">@item.Title</td>
                    <td>@item.CreatedOn</td>
                    <td><a href="PropertiesAdmin/Edit/@item.Id" class='glyphicon glyphicon-pencil' title="Edit"></a></td>
                    <td><a href="PropertiesAdmin/Details/@item.Id" class='glyphicon glyphicon-zoom-in' title="Details"></a></td>
                    <td><a href="PropertiesAdmin/Delete/@item.Id" class='glyphicon glyphicon-trash' title="Delete"></a></td>
                </tr>
            }
        </table>
    </div>
</div>


        
        




